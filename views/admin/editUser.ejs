<%- include('../layout/header')-%>
<div class="mt-5 mx-5">
    <button type="button" class=" btn bg-primary ">
        <a  href="/admin/dashboard" class="text-white" style="text-decoration: none;"> back</a>

    </button>
</div>

    <div class="row  main_conatiner_admin">
<div class="col-md-3">

</div>

        <div class="col-md-6 ">
          <div class=" mt-5 ">
            <h3 class="text-center mb-3">
              <i class="fas fa-user-plus"></i> Edit User
            </h3>
            <form class="ms-5 ps-5 " action="/admin/editUser" method="POST">
              <div class="form-group my-3 ">
                <!-- <label for="name">Name</label> -->
                <input
                  type="name"
                  id="name"
                  name="name"
                  class="form-control w-75"
                  placeholder="Enter Name"
                  value="<%= user.name %>"
                  required
                />
              </div>
              <div class="form-group my-3">
                <!-- <label for="email">Email</label> -->
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control w-75"
                  placeholder="Enter Email"
                  value="<%= user.email %>"
                  required
                />
              </div>
              <div class="form-group my-3">
                <!-- <label for="email">mobile</label> -->
                <input
                  type="number"
                  id="mobile"
                  name="mobile"
                  class="form-control w-75"
                  placeholder="Enter mobile "
                  value="<%= user.mobile %>"

                  required
                />
              </div>
              <input
              type="hidden"
              name="id"
              value="<%= user._id %>"

              required
            />
          
            
              <div class="col-12">
                <button type="submit" class="btn w-75 signup_btn">update</button>
              </div>

            </form>
          <% if(typeof message !== 'undefined'){
            %>
        <p class="text-success"><%= message %></p>
            <%
          } %>

          </div>
        </div>
      </div>

      <%- include('../layout/footer')-%>