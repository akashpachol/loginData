        <div class="input-group">
            <div class="form-outline">
                <input type="search" placeholder="search Username,email,mobile" class="form-control" name="search">
    
            </div>
            <input type="submit" value="search" class="btn btn-primary">
    
          </div>
    </form>
      
  </div>    
 
<table class="table align-middle mb-0 bg-white"  style="row-gap: 4;">
    <thead class="bg-light">
      <tr>
         <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Actions</th>
      </tr>
    </thead>
    <%
    if(users.length>0){
        users.forEach((user)=>{
            %>
    <tbody>
      <tr>

        <td>
          <div class="d-flex align-items-center">
   
            <div class="ms-3">
              <p class="fw-bold mb-3"><%=user.name%></p>
            </div>
          </div>
        </td>
        <td>
          <p class="fw-normal mb-1"><%=user.email%></p>
        </td>
        <td>
            <p class="fw-normal mb-1"><%=user.mobile%></p>
        </td>
     
        
        <td>
            <a href="/admin/editUser?id=<%= user._id%>"><button type="button" class="btn bg-warning-subtle ">edit</button>
                </a>
            <a href="/admin/deleteUser?id=<%= user._id%>"><button type="button" class="btn  btn-danger ">delete</button>
                </a>
        </td>
      </tr>
      
    </tbody>
    <%
    })

}
else{
    %>
    
    <tr>
        <td colspan="5">User Not Found</td>
    </tr>
    <%
}
%>
  </table>
